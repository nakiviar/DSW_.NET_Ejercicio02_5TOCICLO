@model IEnumerable<Ejercicio02.Models.Cliente>

@{
    ViewBag.Title = "PaginacionClientes";
}

<h2>PaginacionClientes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>

<p style="text-align:center">

    <!-- boton inicio-->
    @Html.ActionLink("◄", //alt + 17
               "PaginacionClientes",
               "Negocio",
               new { p = 0 },
               new
               {
                   @class = "btn btn-danger" // Se pintara el botoncito de la paginacion
               })
    <!-- boton anterior-->
    @if (ViewBag.p > 0)
    {
        @Html.ActionLink("←", //alt + 27
         "PaginacionClientes",
         "Negocio",
         new { p = (ViewBag.p - 1) },
         new
         {
             @class = "btn btn-warning"
         })
    }

    <!--agregando los botones de la paginacion-->
    @for (int i = 0; i < (int)ViewBag.pags; i++)
    {

        if (i == (int)ViewBag.p)
        {

            @Html.ActionLink((i + 1).ToString(),
                        "PaginacionClientes",//Nombre del action
                        "Negocio",//Nombre del controlador
                        new { p = i },
                        new
                             {
                                 @class = "btn btn-primary" // Se pintara el botoncito de la paginacion
                            })
        }
        else
        {
            @Html.ActionLink((i + 1).ToString(),
                        "PaginacionClientes",//Nombre del action
                        "Negocio",//Nombre del controlador
                        new { p = i },
                        new
                             {
                                 @class = "btn btn-default"
                            })
        }

    }

    <!-- boton siguiente-->
    
    @if (ViewBag.p < ViewBag.pags-1)
    {
        @Html.ActionLink("→", //alt+ 26
         "PaginacionClientes",
         "Negocio",
         new { p = (ViewBag.p + 1) },
         new
         {
             @class = "btn btn-warning"
         })
    }

    <!-- boton final-->
    @Html.ActionLink("►", //alt +16
              "PaginacionClientes",
              "Negocio",
              new { p = ViewBag.pags - 1 },
              new
              {
                  @class = "btn btn-danger" // Se pintara el botoncito de la paginacion
              })


</p>
